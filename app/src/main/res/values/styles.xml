<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolTipAltStyle">
        <item name="ttlm_padding">8dp</item>
        <item name="ttlm_backgroundColor">#ffaa01</item>
        <item name="ttlm_cornerRadius">6dp</item>
        <item name="ttlm_arrowRatio">1.2</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayAltStyle</item>
        <item name="android:textAppearance">@style/ToolTipAltTextStyle</item>
    </style>

    <style name="ToolTipOverlayAltStyle" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">#FF333333</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="ToolTipAltTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

</resources>
